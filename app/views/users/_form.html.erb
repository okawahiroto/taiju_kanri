<%= simple_form_for(@user) do |f| %>
  <%= f.input :name, label: '名前',
    placeholder: '名前を入力してください',
    autofocus: true %>
  <%= f.input :email, label: 'メールアドレス',
    placeholder: 'メールアドレスを入力してください'%>
  <%= f.input :target_weight, label: '目標体重(kg)',
    placeholder: '目標体重を入力してください' %>
  <%= f.input :password, label: 'パスワード',
    placeholder: 'パスワードを入力してください' %>
  <%= f.input :password_confirmation, label: 'パスワード確認',
    placeholder: 'パスワードをもう一度入力してください' %>
  <%= f.button :submit, value: '登録する', class: 'btn-primary' %>
<% end %>
